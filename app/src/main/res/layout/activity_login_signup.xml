                    android:textCursorDrawable="@drawable/color_curser"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/edtOTP3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/fill"
                    android:gravity="center"
                    android:inputType="number"
                    android:textCursorDrawable="@drawable/color_curser"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/edtOTP4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/fill"
                    android:gravity="center"
                    android:inputType="number"
                    android:textCursorDrawable="@drawable/color_curser"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/edtOTP5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/fill"
                    android:gravity="center"
                    android:inputType="number"
                    android:textCursorDrawable="@drawable/color_curser"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtChangeMobileNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:text="Change Mobile No"
                android:textColor="@color/dark_blue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
