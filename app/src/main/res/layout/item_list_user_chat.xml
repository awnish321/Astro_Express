<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Card_View="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dimen_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_5dp"
                android:background="@drawable/button_corner"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_2dp"
                        app:cardCornerRadius="@dimen/dimen_10dp">

                        <ImageView
                            android:id="@+id/profile_img"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:background="@drawable/button_corner_base_blue"
                            android:src="@drawable/place_holder" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llChatDetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_15dp">

                    <TextView
                        android:id="@+id/txtAstrologerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nikita Jain"
                        android:textColor="#006794"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtLastMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#006794"
                            android:text="English,Hindi" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtAstrologerChatDate"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="#006794"
                            android:gravity="center"
                            android:text="" />

                        <TextView
                            android:id="@+id/txtAstrologerChatTime"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="#006794"
                            android:gravity="center"
                            android:text="" />

                        <Button
                            android:id="@+id/suggestedRemedies"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginVertical="@dimen/dimen_5dp"
                            android:background="@drawable/buttonbackground"
                            android:padding="@dimen/dimen_5dp"
                            android:text="remedies"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
