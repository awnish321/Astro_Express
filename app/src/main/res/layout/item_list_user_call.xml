<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgCallStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_can_t_connect"
        app:layout_constraintBottom_toBottomOf="@+id/txtDuration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtAstrologerName" />

    <TextView
        android:id="@+id/txtAstrologerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bob Stoner"
        android:layout_marginLeft="20dp"
        android:textSize="22sp"
        android:textColor="@color/browser_actions_text_color"
        app:layout_constraintStart_toEndOf="@+id/imgCallStatus"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Connected"
        android:textColor="#ff6868"
        app:layout_constraintStart_toStartOf="@+id/txtAstrologerName"
        app:layout_constraintTop_toBottomOf="@+id/txtAstrologerName" />

    <TextView

        android:id="@+id/txtDateOfCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5:49 PM"
        android:textColor="@color/dark_blue"
        app:layout_constraintBottom_toBottomOf="@id/txtDuration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtAstrologerName" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="#4D000000"
        app:layout_constraintWidth_percent=".85"
        app:layout_constraintTop_toBottomOf="@id/txtDuration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
