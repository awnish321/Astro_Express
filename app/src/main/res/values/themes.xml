<!--        <item name="android:textColorHighlight">@color/dark_blue</item>-->
<!--        <item name="android:textColorLink">@color/base_blue</item>-->
<!--    </style>-->

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:textColorHighlight">@color/dark_blue</item>
        <item name="android:textColorLink">@color/base_blue</item>
    </style>

    <style name="ListRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/dark_blue</item>
    </style>
    <style name="NewRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/dark_gray</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

</resources>