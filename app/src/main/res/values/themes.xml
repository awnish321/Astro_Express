<resources>
    Base application theme.
    <style name="Theme.AstroExpress" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" >#5a9bd5</item>
        <item name="android:textColorHighlight">@color/dark_blue</item>
        <item name="android:textColorLink">@color/base_blue</item>
    </style>

<!--    <style name="CustomToolbarTheme" parent="Theme.AppCompat.DayNight.NoActionBar">-->
